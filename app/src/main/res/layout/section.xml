<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.siddiqui.myapplication.Section"
    android:orientation="vertical"
    android:background="@drawable/abc">

    <TextView android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:text="Practice Programing"
        android:layout_gravity="center_horizontal" />

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView1" >

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button android:id="@+id/button0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="Click_funcition1"
                android:text="Simple Programs"
                android:textColor="@color/abc_search_url_text" />

            <Button android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pattern Programs"
                android:onClick="Click_funcition2"
                android:textColor="@color/abc_search_url_text" />

            <Button android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Array and String"
                android:onClick="Click_funcition3"
                android:textColor="@color/abc_search_url_text" />

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Oops"
                android:onClick="Click_funcition4"
                android:textColor="@color/abc_search_url_text" />

            <Button android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sort"
                android:onClick="Click_funcition5"
                android:textColor="@color/abc_search_url_text" />



            <Button android:id="@+id/button7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="JDBC"
                android:onClick="Click_funcition7"
                android:textColor="@color/abc_search_url_text" />

            <Button android:id="@+id/button8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="Click_funcition8"
                android:text="Exception Handling"
                android:textColor="@color/abc_search_url_text" />



            <Button android:id="@+id/button11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Servlet"
                android:onClick="Click_funcition9"
                android:textColor="@color/abc_search_url_text"/>

            <Button android:id="@+id/button12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Jsp"
                android:onClick="Click_funcition10"
                android:textColor="@color/abc_search_url_text"/>

            <Button android:id="@+id/button13"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Hibernate"
                android:onClick="Click_funcition11"
                android:textColor="@color/abc_search_url_text"/>

            <Button android:id="@+id/button14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Struts"
                android:onClick="Click_funcition12"
                android:textColor="@color/abc_search_url_text"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
